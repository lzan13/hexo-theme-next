// Custom styles.
// nav
#menu .menu-item a:hover{
    color: #239efe;
}
#menu .menu-item-active a{
    color: #fc6423;
}

#sidebar .sidebar-inner .site-overview a:hover,#sidebar .sidebar-inner .post-toc-wrap a:hover{
    color: #239efe;
}



// post
#posts .post-body a{
    color: #239efe;
}
#posts .post-body a:hover{
    color: #fc6423;
}
#posts .post-body .post-button a{
    color: #232323;
}
#posts .post-body .post-button a:hover{
    color: #f8f8f8;
}

// code
code{
    background: d2d2d2;
    padding: 3px 5px;
    border-radius: 5px;
    color: #fc6423;
}
pre code{
    padding: 5px;
    border-radius: 5px;
}

// 打赏部分样式
#reward{
    width: 100%;
    margin: 15px auto;
    padding: 15px;
    text-align: center;
    border-top: 1px solid #e8e8e8;
    border-bottom: 1px solid #e8e8e8;
    
}
#reward_comment p{
    padding:10px;
}
#reward_button {
    cursor: pointer;
    border: 0;
    outline: 0;
    border-radius: 36px;
    padding: 0;
    margin: 0;
    letter-spacing: normal;
    text-transform: none;
    text-indent: 0px;
    text-shadow: none;
}
#reward_button span {
    display: inline-block;
    width: 122px;
    height: 36px;
    line-height:36px;
    border-radius: 36px;
    color: #fff;
    font-weight: 400;
    font-style: normal;
    font-variant: normal;
    font-stretch: normal;
    font-size: 16px;
    font-family: "Microsoft Yahei";
    background: #239ef8;
}
#reward_button span:hover{
    background: #239efe;
}
#reward_qr{
    padding-top:15px;
}
#reward_qr a{
    border: none;
}
#reward_qr img{
    width: 260px;
    max-width: 100%;
    display: inline-block;
    margin: 20px;
}
#wechat, #alipay{
    border-radius: 8px;
    margin:10px;
}
#wechat:hover{
    box-shadow: 0px 1px 15px rgba(0, 0, 0, 0.2);
}
#alipay:hover{
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
}